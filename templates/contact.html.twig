{% extends 'baseform.html.twig' %}



{% block content %}
<section class="login">
    <div class="container">
        <div class="row">
            <div class="identification">
                <div class="col-lg-8 mx-auto text-center">
                    <h2 class="section-heading text-white">Contact</h2>
                </div>
                <div class="input-group mx-auto">
                    <span class="input-group-addon" id="sizing-addon2"></span>
                    <input type="text" class="form-control" placeholder="Name" aria-describedby="sizing-addon2">
                </div>
                <div class="form-group">
                    <input class="form-control" id="email" type="email" placeholder="Email address" required="required" data-validation-required-message="Please enter your email address.">
                    <p class="help-block text-danger"></p>
                </div>
                <div class="form-group">
                    <span class="input-group-addon" id="sizing-addon2"></span>
                    <input type="text" class="form-control" placeholder="Subject" aria-describedby="sizing-addon2">
                </div>
                <div class="form-group">
                    <textarea class="form-control" id="message" placeholder="Message" required="required" data-validation-required-message="Please enter a message."></textarea>
                    <p class="help-block text-danger"></p>
                </div>
                <div class="text-center submit">
                    <button type="submit" class="btn btn-primary btn-lg" href="#">Submit</button>
                </div>
            </div>
        </div>
    </div>
</section>

{% endblock %}