{# templates/register.html.twig #}
{% extends 'baseform.html.twig' %}
 
{% block content %}


   
    
    






<section class="login">
    <div class="container">
        <div class="row">
            <div class="identification">
            {{ form_start(form) }}
                <div class="col-lg-8 mx-auto text-center">
                    <h2 class="section-heading text-white">Sign up</h2>
                </div>
                <div class="form-group">
                     {{ form_row(form.fullName, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.username, {'attr': {'class': 'form-control'}}) }}
                </div>
                
                <div class="form-group">
                   {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                   
                    {{ form_row(form.password.first, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    
                   {{ form_row(form.password.second, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="register text-center">
                    <button type="submit" class="btn btn-primary btn-lg">Register</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</section>

{% endblock %}