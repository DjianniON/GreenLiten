{% extends 'baseform.html.twig' %}


{% block content %}

<div class="search text-white text-center">
    <div class="container">
        <div class="row">
            <div class="col-xl-9 mx-auto">
            </div>
            <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
                <form action="{{path('search')}}" method="POST">
                    <div class="form-row barre">
                        <div class="col-12 col-md-9 mb-2 mb-md-0">
                            <input type="text" name="value" class="form-control form-control-lg" placeholder="Search per tag...">
                        </div>
                        <div class="col-12 col-md-3">
                            <button type="submit" class="btn btn-block btn-lg btn-primary">Search</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    {% if posts is defined %}
    <p>Search results for :{{ value }}</p>

    {% for post in posts %}
    <div class="row">
       <div class="card mb-4 col-md-12 mx-auto" id="art1">
        <a href="{{ path('post', { 'name': post.id }) }}"><img class="card-img-top" src="{{ post.img }}" alt="post img"></a>
            <div class="card-body">
            <h4 class="card-title">
            <a href="{{ path('post', { 'name': post.id }) }}">{{ post.postTitle }}</a>
            </h4>
               <a href="{{ path('post', { 'name': post.id }) }}" class="btn btn-primary">Read More &rarr;</a>
            </div>
            <div class="card-footer text-muted">
            Published on {{ post.Date|date('F, jS \\a\\t g:ia') }} by {{ post.Author }}.
            </div>
        </div>
    </div>
{% endfor %}
{% endif %}
    </div>

{% endblock %}

